# Configuração do Servidor
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/rpg_system
MONGODB_URI_TEST=mongodb://localhost:27017/rpg_system_test

# PostgreSQL (opcional)
POSTGRES_URI=postgresql://postgres:password@localhost:5432/rpg_db

# Segurança
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
BCRYPT_ROUNDS=12

# Redis (para cache e sessões)
REDIS_URL=redis://localhost:6379

# Python AI Service
PYTHON_SERVICE_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
SOCKET_PORT=3002

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
